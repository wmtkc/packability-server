{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "ES2020.Promise"
      ],
      "module": "commonjs",

      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "pretty": true,
      "noEmit": true,
      
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "strictNullChecks": true,

      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"]
      }

    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
}
  